<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen expandida -->
    <ImageView
        android:id="@+id/philosopherImageExpanded"
        android:layout_width="302dp"
        android:layout_height="426dp"

        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Información sobre el filósofo -->
    <TextView
        android:id="@+id/philosopherInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philosopher Info"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/philosopherInfoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="More information about the philosopher will be displayed here."
        android:textAppearance="?attr/textAppearanceBody1" />
</LinearLayout>
