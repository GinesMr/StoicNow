<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos de texto -->
    <style name="TextAppearance.Stoic" parent="TextAppearance.MaterialComponents.Body1">
        <!-- Estilo base para todo el texto -->
        <item name="fontFamily">@font/crimson_pro</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.Stoic.Headline1">
        <item name="fontFamily">@font/cinzel</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Stoic.Headline2">
        <item name="fontFamily">@font/cinzel</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Stoic.Body1">
        <item name="fontFamily">@font/crimson_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="TextAppearance.Stoic.Body2">
        <item name="fontFamily">@font/crimson_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="TextAppearance.Stoic.Quote">
        <item name="fontFamily">@font/crimson_pro_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>